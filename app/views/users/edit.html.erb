    <%= message %>
  <% end %>
<% end %>


<%= form_with model: @user, url: user_path(@user.id), method: :patch ,local: true do |f| %>
<div class="form-group">
  <label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
</div>

<div class="form-group">
   <%= f.attachment_field :profile_image, placeholder: "Image" %></br>
</div>
<div class="form-group">
   <label for="inputName">introduction</label></br>
   <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction"%></br>
</div>

<%= f.submit "Update User",class:"btn btn-secondary" %>
<% end %>
</div>
</div>
</div>