<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to @user do %>
          <%= attachment_image_tag book.user, :profile_image, :fill,40,40, fallback: "no_image.jpeg" %>
