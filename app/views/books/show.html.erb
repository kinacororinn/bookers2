<% if flash[:notice] %>
 <%= flash[:notice] %>
<% end %>

<%= render 'books/list', book: @book ,user: @user %>

<h2>Book detail</h2>
<table>
<tbody>
  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill,40,40, fallback: "no_image.jpeg" %>
        <%= @user.name %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(@book.id) do %>
       <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <td><% if user_signed_in? && current_user.id == @book.user_id %></td>
    <td><%= link_to 'Edit',edit_book_path(@book.id) %></td>
    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete %></td>
        <% end %>
</tr>
</tbody>
</table>