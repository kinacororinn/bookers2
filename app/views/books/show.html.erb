<% if flash[:notice] %>
 <%= flash[:notice] %>
<% end %>
<div class='container px-5 px-sm-0'>
<div class='row'>
  
<%= render 'books/list', book: @book_new ,user: @user %>

<div class='col-md-8 offset-md-1'>
<h2>Book detail</h2>
 <table class='table'>
  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill,40,40, fallback: "no_image.jpeg" %>
        <%= @user.name %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(@book.id) do %>
       <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
        <% if current_user.id == @book.user.id %>
    <td><%= link_to 'Edit',edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %></td>
        <% end %>
  </tr>

 </table>
</div>
</div>
</div>