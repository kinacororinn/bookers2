 <script src="https://kit.fontawesome.com/3a3c71c8e4.js" crossorigin="anonymous"></script>
   <div class='col-md-3'>
    <h1>User info</h1>
     <table class='table'>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></th>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
       <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th></br>
       </tr>
     </table>
       <%= link_to edit_user_path(user) do  %>
       <div class="btn btn-outline-secondary btn-block fas fa-user-cog" ></div>
       <% end %>
    <h2 class="mt-3">New book</h2>

      <div class="form-group">
        <%= form_with model: book,url: books_path,local:true do |f| %>
        <label>title</label></br>
        <%= f.text_field :title %>
        <div class="form-group">
         <label>opinion</label></br>
         <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class:"btn btn-success" %>
          <% end %>
        </div>
        </div>

    </div>